files:
    "/etc/nginx/conf.d/proxy.conf":
      mode: "000644"
      owner: root
      group: root
      content: |
          client_max_body_size 100M;
          client_body_buffer_size 1024k;
          proxy_connect_timeout 600s;
          proxy_read_timeout 54000s;
          proxy_send_timeout 54000s;

container_commands:
  01_reload_nginx:
    command: "service nginx reload"